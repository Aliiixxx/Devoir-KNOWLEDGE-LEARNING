{% extends 'base.html.twig' %}

{% block title %}Modifier le Cursus{% endblock %}

{% block body %}
<h1>Modifier le Cursus</h1>

<form method="post">
    <div>
        <label for="formation_id">Formation :</label>
        <select id="formation_id" name="formation_id" required>
            {% for formation in formations %}
                <option value="{{ formation.id }}" {% if cursus.formation and cursus.formation.id == formation.id %}selected{% endif %}>
                    {{ formation.title }}
                </option>
            {% endfor %}
        </select>
    </div>
    <div>
        <label for="title">Titre :</label>
        <input type="text" id="title" name="title" value="{{ cursus.title }}" required>
    </div>
    <div>
        <label for="price">Prix :</label>
        <input type="number" id="price" name="price" value="{{ cursus.price }}" step="0.01" required>
    </div>
    <button type="submit" class="btn btn-primary">Sauvegarder</button>
</form>

<a href="{{ path('admin_formations') }}">Retour Ã  la liste des cursus</a>
{% endblock %}
