{% extends 'base.html.twig' %}

{% block title %}Modifier l'utilisateur{% endblock %}

{% block body %}
<h1>Modifier l'utilisateur</h1>

<form method="post">
    <div>
        <label for="firstname">Prénom :</label>
        <input type="text" id="firstname" name="firstname" value="{{ user.firstname }}" required>
    </div>
    <div>
        <label for="lastname">Nom de famille :</label>
        <input type="text" id="lastname" name="lastname" value="{{ user.lastname }}" required>
    </div>
    <div>
        <label for="email">Email :</label>
        <input type="email" id="email" name="email" value="{{ user.email }}" required>
    </div>
    <div>
        <label>Rôles :</label>
        <div>
            <input type="checkbox" id="role_user" name="roles[]" value="ROLE_USER" {% if 'ROLE_USER' in user.roles %}checked{% endif %}>
            <label for="role_user">Utilisateur</label>
        </div>
        <div>
            <input type="checkbox" id="role_admin" name="roles[]" value="ROLE_ADMIN" {% if 'ROLE_ADMIN' in user.roles %}checked{% endif %}>
            <label for="role_admin">Administrateur</label>
        </div>
    </div>
    <div>
        <label for="password">Mot de passe :</label>
        <input type="password" id="password" name="password">
    </div>
    <button type="submit">Sauvegarder</button>
</form>

<a href="{{ path('admin_users') }}">Retour à la liste des utilisateurs</a>
{% endblock %}
